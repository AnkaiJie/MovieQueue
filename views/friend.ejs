</head>

<header>
	<nav class="navbar navbar-inverse navbar-static-top">
		<div class="container">
			<div class="navbar-header" style="padding-top: 5px">
				<a href="/home"> <img src="logo.png"
					style="width: 180px; height: 60px; border: 0">
				</a>
			</div>
			<div class="col-sm-3 col-md-7">
				<form class="navbar" role="search" style="padding-top: 15px">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search"
							name="srch-term" id="srch-term">
						<div class="input-group-btn">
							<button class="btn btn-default" type="submit">
								<i class="glyphicon glyphicon-search"></i>
							</button>
						</div>
					</div>
				</form>
			</div>
			<div class="container">
				<ul class="nav navbar-nav navbar-right" style="padding-top: 7px">
					<li><a href="/home">Home</a></li>
					<li><a href="/">About</a></li>
					<li><a href="/logout">Log out</a></li>
				</ul>
			</div>
		</div>
	</nav>
</header>

<body>
	<div id="username">
		<h1><%=name%>'s Movie List</h1>
	</div>
	<div class="container" id="movie-feed"></div>
</body>

<script>
	var userName = $('#username').text();
	var user;

	var initPane = function() {
		$("#movie-feed").after("<h1 id='movie-label' style='text-align: center;'>" + userName + "'s Movie List</h1>");
		if (user.movies.length == 0)
			$("#movie-label").after("<h1> YOUR FRIEND DOESN'T HAVE ANY MOVIES. GO RECOMMEND A MOVIE YOU ASS. </h1>");
		else {
			for (var i = 0; i < user.movies.length; i++) {
				$("#movie-label").after(
						"<div class='jumbotron' style='margin-left: 375px; margin-right:350px;' id='" + user.movies[i].id + "'><div class='col-md-3'> <h2>" + user.movies[i].title + "</h2>	<h3 style='font-size: 18px'>Released: " + user.movies[i].date + "</h3><h3 style='font-size: 18px'> Rating: "
								+ user.movies[i].rating + "</h3> </div><div class='col-md-6'><h3 style='text-align: left; font-size: 18px'>" + user.movies[i].desc + "</h3> </div> </div>");
			}
		}
	}
	$.get("/getLoggedUser/" + userName, function(data) {
		user = data;
		initPane();
	});
</script>

